<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_20sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_img_d"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round="@dimen/_10sdp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageView10"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_img_d"
            app:layout_constraintEnd_toEndOf="@+id/iv_img_d"
            app:layout_constraintStart_toStartOf="@+id/iv_img_d"
            app:layout_constraintTop_toTopOf="@+id/iv_img_d"
            android:src="@drawable/icon"
            />

        <TextView
            android:id="@+id/notification_msg_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:text=" هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة لقد تم التوليد هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة لقد تم التوليد هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة لقد تم التوليد هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة لقد تم التوليد"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_img_d"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>